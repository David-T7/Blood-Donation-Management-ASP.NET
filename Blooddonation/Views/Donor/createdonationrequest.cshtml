
@{
    ViewData["Title"] = "createdonationrequest";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <link href="css/sidebar.css" rel="stylesheet">

</head>

<body>
    <div class="side-navbar active-nav d-flex justify-content-between flex-wrap flex-column"
         id="sidebar">

        <ul class="nav flex-column text-white w-100">
            <a href="/donor/dashbord" class="nav-link h3 text-white my-2">
                Donor
            </a>
            <li class="nav-link">
                <i class="bx bxs-dashboard"></i>
                <span class="mx-2"><a class="inner-anchor" href="/donor/dashbord"> Home</a></span>
            </li>

            <li class="nav-link">
                <i class="bx bx-git-pull-request"></i>
                <span class="mx-2"><a class="inner-anchor" href="/donor/appointmentlist">Appointment</a></span>
            </li>



            <li class="nav-link">
                <i class="bx bx-git-pull-request"></i>
                <span class="mx-2"><a class="inner-anchor" href="/donor/donationrequestlist"> Request</a></span>
            </li>



            <li class="nav-link">
                <i class="bx bx-edit"></i>
                <span class="mx-2"><a class="inner-anchor" href="/donor/editaccount"> Edit Account</a></span>
            </li>

            <li class="nav-link">
                <i class="bx bx-log-out"></i>
                <span class="mx-2"><a class="inner-anchor" href="/donor/logout"> Log Out </a></span>
            </li>
        </ul>

    </div>




    <!-- Main Wrapper -->
    <div class="p-1 my-container active-cont" style="background-color:lightblue">
        <!-- Top Nav -->
        <nav class="navbar top-navbar navbar-light bg-light px-5">
            <a class="btn border-0" id="menu-btn"><i class="bx bx-menu"></i></a>
        </nav>

        <br>
        <section class="h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                &nbsp;&nbsp; <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <h1 class="fs-4 card-title fw-bold mb-4">Make Request </h1>
                        <form action="/donor/createdonationrequest" method="POST">
                            Do you have any heart disease blood circulation problem, blood clotting ?  <select id="HeartDisease" name="HeartDisease" class="form-control"> <option value="Yes">Yes</option> <option value="No">No</option>  </select> <br>
                            Do you have kidney failure ,lung disease ,blood pressure, diabetes ,epilepsy ?  <select id="Kidney_Lung_Bloodpressure" name="Kidney_Lung_Bloodpressure" class="form-control"> <option value="Yes">Yes</option> <option value="No">No</option>    </select><br>
                            Have you ever had liver problems   <select id="Liverproblems" name="Liverproblems" class="form-control"> <option value="Yes">Yes</option> <option value="No">No</option> </select> <br>
                            Have you ever had any sexually transmitted disease?   <select id="STD" name="STD" class="form-control"> <option value="Yes">Yes</option> <option value="No">No</option>  </select><br>
                            Have you get tattoo get ear pierced or skin pierced(in the last month)?          <select id="Tattoo_Ear_skin_pierced" name="Tattoo_Ear_skin_pierced" class="form-control"><option value="Yes">Yes</option> <option value="No">No</option>  </select><br>
                            Have you slept with someone other than your partner in manner that is not safe?  <select id="Slpet_Unsafely_OtherThanPartner" name="Slpet_Unsafely_OtherThanPartner" class="form-control"> <option value="Yes">Yes</option> <option value="No">No</option>      </select><br>
                            Have you ever had serious skin  repair procedure or do you have appointment to do so ? <select id="SeriousSkinRepair" name="SeriousSkinRepair" class="form-control"> <option value="Yes">Yes</option> <option value="No">No</option>  </select>   <br>
                            Are you pregnant ? <select id="Preagnant" name="Preagnant" class="form-control"> <option value="Yes">Yes</option> <option value="No">No</option>  </select>  <br>
                            In the last 6month have you had a miscarriage or abortion ? <select id="Abortion" name="Abortion" class="form-control"><option value="Yes">Yes</option> <option value="No">No</option>  </select>   <br>
                            Are you currently breast feeding ?  <select id="BreastFeeding" name="BreastFeeding" class="form-control"><option value="Yes">Yes</option> <option value="No">No</option> </select> <br>
                            Would you like to receive information and advice regarding your blood healthfulness <select id="BloodHealthfulnessInfo" name="BloodHealthfulnessInfo" class="form-control">  <option value="Yes">Yes</option> <option value="No">No</option> </select> <br>
                            <br>
                            <div style="align-self:auto; margin-left: 130px;">
                                <button type="submit" class="btn btn-primary ms-auto">
                                    Submit
                                </button>
                            </div>



                        </form>
                    </div>
                </div>

            </div>
        </section>
        </div>
        <br>
</body>
</html>
